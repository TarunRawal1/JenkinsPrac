pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "Building the application..."
                    node --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage("test"){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
            sh '''
            test -f build/index.html || echo "index.html not found"
            npm ci
            npm test
            ls -la
            '''
        }
        }
    }
    post{
        always{
            junit '**/test-results.xml'
        }
    }
}
